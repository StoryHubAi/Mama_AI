# Production Environment Variables for MAMA-AI
# Copy this file to .env and update with your actual credentials

# Africa's Talking Configuration
AFRICASTALKING_USERNAME=your_username_here
AFRICASTALKING_API_KEY=your_api_key_here
AFRICASTALKING_SHORTCODE=your_shortcode_here
AFRICASTALKING_ENVIRONMENT=production

# Database Configuration (Use PostgreSQL for production)
DATABASE_URL=postgresql://username:password@host:5432/mama_ai_db

# Flask Application Settings
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your_very_secure_secret_key_here_minimum_32_characters

# AI Model Configuration (Choose one provider)
AI_PROVIDER=openai
OPENAI_API_KEY=sk-your_openai_api_key_here
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.7

# Alternative AI Providers (uncomment if using)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# GOOGLE_API_KEY=your_google_api_key_here

# Application Settings
SUPPORTED_LANGUAGES=en,sw
DEFAULT_LANGUAGE=en
MAX_SMS_LENGTH=160
SMS_RATE_LIMIT=10

# Logging
LOG_LEVEL=INFO

# Heroku Port (automatically set by Heroku)
PORT=5000

# Redis Configuration (for background tasks)
REDIS_URL=redis://localhost:6379/0
